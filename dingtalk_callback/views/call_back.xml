<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="dingtalk_users_callback_assets" name="DingTalk Users Callback" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/dingtalk_callback/static/src/js/users_callback.js"></script>
        </xpath>
    </template>

    <record id="dingtalk_users_callback_tree_view" model="ir.ui.view">
        <field name="name">钉钉回调管理</field>
        <field name="model">dingtalk.users.callback</field>
        <field name="arch" type="xml">
            <tree default_order="id desc">
                <field name="company_id"/>
                <field name="value_type"/>
                <field name="token"/>
                <field name="aes_key"/>
                <field name="url"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="dingtalk_users_callback_form_view" model="ir.ui.view">
        <field name="name">钉钉回调管理</field>
        <field name="model">dingtalk.users.callback</field>
        <field name="arch" type="xml">
            <form string="钉钉回调管理">
                <header>
                    <button name="register_call_back" type="object" string="注册事件"
                            states='00' class="oe_highlight"
                            confirm="确认注册事件到钉钉服务器吗？"/>
                    <button name="update_call_back" type="object" string="更新事件"
                            states='01' class="oe_highlight"
                            confirm="确认要更新事件到钉钉服务器吗？"/>
                    <field name="state" widget="statusbar" modifiers="{'readonly': true}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="value_type"/>
                            <field name="url" />
                        </group>
                        <group>
                            <field name="token" attrs="{'readonly': [('state', '!=', '00')]}"/>
                            <field name="aes_key"/>
                        </group>
                        <field name="call_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <group>
                            <field name="create_uid" string="创建人" attrs="{'readonly': [('state', '!=', '010')]}"/>
                        </group>
                        <group>
                            <field name="create_date" string="创建时间" attrs="{'readonly': [('state', '!=', '010')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="dingtalk_users_callback_action" model="ir.actions.act_window">
        <field name="name">钉钉回调管理</field>
        <field name="res_model">dingtalk.users.callback</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="钉钉回调管理"
              id="dingtalk_users_callback_menu"
              parent="dingtalk_callbacke_main_menu"
              sequence="2"
              action="dingtalk_users_callback_action"
    />

</odoo>
