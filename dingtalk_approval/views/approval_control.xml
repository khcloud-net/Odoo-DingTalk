<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dingtalk_approval_control_tree_view" model="ir.ui.view">
        <field name="name">审批单据关联</field>
        <field name="model">dingtalk.approval.control</field>
        <field name="arch" type="xml">
            <tree default_order="id desc" editable="top" create="true">
                <field name="company_id" options="{'no_create_edit': True}"/>
                <field name="oa_model_id" options="{'no_create_edit': True}"/>
                <field name="template_id" options="{'horizontal': true, 'no_create_edit': True}"/>
            </tree>
        </field>
    </record>

    <record id="dingtalk_approval_control_action" model="ir.actions.act_window">
        <field name="name">审批单据关联</field>
        <field name="res_model">dingtalk.approval.control</field>
        <field name="view_mode">tree</field>
    </record>

    <record model="ir.ui.view" id="dingtalk_approval_control_search">
        <field name="model">dingtalk.approval.control</field>
        <field name="arch" type="xml">
            <search string="审批单据关联">
                <field name="company_id"/>
                <field name="oa_model_id"/>
                <field name="template_id"/>
            </search>
        </field>
    </record>

    <menuitem name="审批单据关联"
              id="dingtalk_approval_control_menu"
              parent="approval_template_main_menu"
              sequence="2"
              action="dingtalk_approval_control_action"
    />

</odoo>
