<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dingtalk_approval_template_tree_view" model="ir.ui.view">
        <field name="name">审批模板</field>
        <field name="model">dingtalk.approval.template</field>
        <field name="arch" type="xml">
            <tree default_order="id desc" editable="top" create="true">
                <field name="company_id"/>
                <field name="name"/>
                <field name="icon_url"/>
                <field name="process_code"/>
                <field name="url"/>
            </tree>
        </field>
    </record>

    <record id="dingtalk_approval_template_action" model="ir.actions.act_window">
        <field name="name">审批模板</field>
        <field name="res_model">dingtalk.approval.template</field>
        <field name="view_mode">tree</field>
    </record>

    <record model="ir.ui.view" id="dingtalk_approval_template_search">
        <field name="model">dingtalk.approval.template</field>
        <field name="arch" type="xml">
            <search string="审批模板">
                <field name="company_id"/>
                <field name="name"/>
                <field name="icon_url"/>
                <field name="process_code"/>
                <field name="url"/>
            </search>
        </field>
    </record>

    <menuitem name="审批"
              id="approval_template_main_menu"
              parent="ali_dingtalk.main_menu"
              sequence="17"
    />

    <menuitem name="审批模板"
              id="dingtalk_approval_template_menu"
              parent="approval_template_main_menu"
              sequence="1"
              action="dingtalk_approval_template_action"
    />

</odoo>
