<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dingtalk_work_record_tree_view" model="ir.ui.view">
        <field name="name">发起待办</field>
        <field name="model">dingtalk.work.record</field>
        <field name="arch" type="xml">
            <tree default_order="id desc">
                <field name="name"/>
                <field name="emp_id"/>
                <field name="record_time"/>
                <field name="state"/>
                <field name="company_id"/>
                <field name="create_uid" string="创建人"/>
                <field name="create_date" string="创建时间"/>
            </tree>
        </field>
    </record>

    <record id="dingtalk_work_record_form_view" model="ir.ui.view">
        <field name="name">发起待办</field>
        <field name="model">dingtalk.work.record</field>
        <field name="arch" type="xml">
            <form string="发起待办">
                <header>
                    <button name="send_record" type="object" string="提交待办"
                            states='00' class="oe_highlight"
                            confirm="请确认待办内容,是否需要发送至钉钉?"/>
                    <field name="state" widget="statusbar" modifiers="{'readonly': true}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="标题,如XX通知消息..."
                                   attrs="{'readonly': [('state', '!=', '00')]}"/>
                        </h1>
                        <h3>
                            <field name="company_id" placeholder="公司" attrs="{'readonly': [('state', '!=', '00')]}"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="emp_id" attrs="{'readonly': [('state', '!=', '00')]}"/>
                            <field name="record_url" attrs="{'readonly': [('state', '!=', '00')]}"/>
                        </group>
                        <group>
                            <field name="record_time" attrs="{'readonly': [('state', '!=', '00')]}"/>
                        </group>
                    </group>
                    <field name="line_ids" attrs="{'readonly': [('state', '!=', '00')]}">
                        <tree editable="top">
                            <field name="title"/>
                            <field name="content"/>
                        </tree>
                    </field>
                    <group>
                        <group>
                            <field name="create_uid" string="创建人" attrs="{'readonly': [('state', '!=', 'n')]}"/>
                        </group>
                        <group>
                            <field name="create_date" string="创建时间" attrs="{'readonly': [('state', '!=', 'n')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="dingtalk_work_record_action" model="ir.actions.act_window">
        <field name="name">发起待办</field>
        <field name="res_model">dingtalk.work.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('record_type', '=', 'out')]</field>
        <field name="context">{}</field>
    </record>

    <menuitem name="待办"
              id="work_record_menu"
              parent="ali_dingtalk.main_menu"
              sequence="15"
    />

    <menuitem name="发起待办"
              id="dingtalk_work_record_menu"
              parent="dingtalk_workrecord.work_record_menu"
              sequence="2"
              action="dingtalk_work_record_action"
    />


    <!--获取待办-->
    <record id="dingtalk_work_get_record_tree_view" model="ir.ui.view">
        <field name="name">获取待办</field>
        <field name="model">dingtalk.work.record</field>
        <field name="arch" type="xml">
            <tree default_order="id desc" create="false" edit="false">
                <field name="name"/>
                <field name="emp_id"/>
                <field name="record_time"/>
                <field name="state"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="dingtalk_work_get_record_form_view" model="ir.ui.view">
        <field name="name">获取待办</field>
        <field name="model">dingtalk.work.record</field>
        <field name="arch" type="xml">
            <form string="获取待办">
                <header>
                    <button name="record_update" type="object" string="待办更新" class="oe_highlight"
                            attrs="{'invisible': [('record_state', '!=', '00')]}"/>
                    <field name="record_state" widget="statusbar" modifiers="{'readonly': true}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="标题,如XX通知消息..."
                                   attrs="{'readonly': [('record_state', '!=', 'no')]}"/>
                        </h1>
                        <h3>
                            <field name="company_id" placeholder="公司"
                                   attrs="{'readonly': [('record_state', '!=', 'no')]}"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="emp_id" attrs="{'readonly': [('record_state', '!=', 'no')]}"/>
                            <field name="record_url" attrs="{'readonly': [('record_state', '!=', 'no')]}"/>
                        </group>
                        <group>
                            <field name="record_time" attrs="{'readonly': [('record_state', '!=', 'no')]}"/>
                        </group>
                    </group>
                    <field name="line_ids" attrs="{'readonly': [('record_state', '!=', 'no')]}">
                        <tree editable="top">
                            <field name="title"/>
                            <field name="content"/>
                        </tree>
                    </field>
                    <group>
                        <group>
                            <field name="create_uid" string="创建人" attrs="{'readonly': [('record_state', '!=', 'no')]}"/>
                        </group>
                        <group>
                            <field name="create_date" string="创建时间"
                                   attrs="{'readonly': [('record_state', '!=', 'no')]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="dingtalk_work_get_record_action" model="ir.actions.act_window">
        <field name="name">获取待办</field>
        <field name="res_model">dingtalk.work.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('record_type', '=', 'put'), ('record_state', '=', '00')]</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('dingtalk_workrecord.dingtalk_work_get_record_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('dingtalk_workrecord.dingtalk_work_get_record_form_view')})]"/>
    </record>

    <menuitem name="待办列表"
              id="dingtalk_work_get_record_menu"
              parent="dingtalk_workrecord.work_record_menu"
              sequence="1"
              action="dingtalk_work_get_record_action"
    />


</odoo>
