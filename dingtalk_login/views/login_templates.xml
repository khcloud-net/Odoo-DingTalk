<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="auth_signup.login" inherit_id="web.login" name="Sign up - Reset Password">
        <xpath expr="//button[@type='submit']" position="after">
            <div class="justify-content-between mt-2 d-flex small">
                <a t-attf-href="/web/dingtalk_login?{{ keep_query() }}">钉钉扫码登录</a>
                <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}">Don't have an account?</a>
                <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}">Reset Password</a>
            </div>
            <div class="justify-content-between mt-2 d-flex small">
                <a t-attf-href="/web/dingtalk/account_login?{{ keep_query() }}">钉钉账号登录</a>
            </div>
        </xpath>
    </template>

    <template id="dingtalk_login.signup" name="Dingtalk Login login">
        <t t-call="web.login_layout">
            <form class="oe_signup_form" role="form" method="post" t-if="not message">
                <div id="login_container" class="login_container">

                </div>
                <p class="alert alert-danger" t-if="error">
                    <t t-raw="error"/>
                </p>
                <p class="alert alert-success" t-if="message">
                    <t t-esc="message"/>
                </p>
                <t t-call="web.layout">
                    <script src="//g.alicdn.com/dingtalk/dinglogin/0.0.5/ddLogin.js"></script>
                    <script type="text/javascript" src="/dingtalk_login/static/src/js/dingtalk_login.js"></script>
                </t>
                <div class="text-center oe_login_buttons pt-3">
                    <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link btn-sm" role="button">使用账号登录?</a>
                </div>
            </form>
        </t>
    </template>

</odoo>
