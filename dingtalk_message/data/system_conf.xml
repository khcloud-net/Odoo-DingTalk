<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--工作消息管理-->
        <record id="ali_dingtalk_system_conf_send_work_message" model="ali.dingtalk.system.conf">
            <field name="name">发送工作通知消息</field>
            <field name="key">send_work_message</field>
            <field name="value">https://oapi.dingtalk.com/topapi/message/corpconversation/asyncsend_v2?access_token=
            </field>
        </record>

        <record id="ali_dingtalk_system_conf_search_work_message" model="ali.dingtalk.system.conf">
            <field name="name">查询工作通知消息的发送进度</field>
            <field name="key">search_work_message</field>
            <field name="value">
                https://oapi.dingtalk.com/topapi/message/corpconversation/getsendprogress?access_token=
            </field>
        </record>

        <record id="ali_dingtalk_system_conf_work_message_result" model="ali.dingtalk.system.conf">
            <field name="name">查询工作通知消息的发送结果</field>
            <field name="key">work_message_result</field>
            <field name="value">https://oapi.dingtalk.com/topapi/message/corpconversation/getsendresult?access_token=
            </field>
        </record>

        <!--群消息-->
        <record id="ali_dingtalk_system_conf_work_chat_send" model="ali.dingtalk.system.conf">
            <field name="name">发送群消息</field>
            <field name="key">chat_send</field>
            <field name="value">https://oapi.dingtalk.com/chat/send?access_token=</field>
        </record>

        <record id="ali_dingtalk_system_conf_work_chat_getReadList" model="ali.dingtalk.system.conf">
            <field name="name">查询群消息已读人员列表</field>
            <field name="key">chat_getReadList</field>
            <field name="value">https://oapi.dingtalk.com/chat/getReadList?access_token=</field>
        </record>

        <record id="ali_dingtalk_system_conf_work_chat_create" model="ali.dingtalk.system.conf">
            <field name="name">创建会话(群)</field>
            <field name="key">chat_create</field>
            <field name="value">https://oapi.dingtalk.com/chat/create?access_token=</field>
        </record>

        <record id="ali_dingtalk_system_conf_work_chat_update" model="ali.dingtalk.system.conf">
            <field name="name">修改会话(群)</field>
            <field name="key">chat_update</field>
            <field name="value">https://oapi.dingtalk.com/chat/update?access_token=</field>
        </record>

        <record id="ali_dingtalk_system_conf_work_chat_get" model="ali.dingtalk.system.conf">
            <field name="name">获取会话(群)</field>
            <field name="key">chat_get</field>
            <field name="value">https://oapi.dingtalk.com/chat/get?access_token=</field>
        </record>


    </data>
</odoo>