<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dingtalk_message_type_tree_view" model="ir.ui.view">
        <field name="name">钉钉消息类型</field>
        <field name="model">dingtalk.message.type</field>
        <field name="arch" type="xml">
            <tree default_order="id desc" editable="top" create="true">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="dingtalk_message_type_action">
        <field name="name">钉钉消息类型</field>
        <field name="res_model">dingtalk.message.type</field>
        <field name="view_mode">tree</field>
    </record>

    <record model="ir.ui.view" id="dingtalk_message_type_search">
        <field name="model">dingtalk.message.type</field>
        <field name="arch" type="xml">
            <search string="钉钉消息类型">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <menuitem id="dingtalk_message_type_menu" name="钉钉消息类型"
              parent="ali_dingtalk.configure_menu"
              sequence="3"
              action="dingtalk_message_type_action"
              groups="ali_dingtalk.group_ali_dingtalk_manager"
    />


</odoo>