<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dingtalk_message_template_tree_view" model="ir.ui.view">
        <field name="name">消息模板</field>
        <field name="model">dingtalk.message.template</field>
        <field name="arch" type="xml">
            <tree default_order="id desc">
                <field name="name"/>
                <field name="model_id"/>
                <field name="subject"/>
                <field name="create_uid" string="创建人"/>
                <field name="create_date" string="创建时间"/>
            </tree>
        </field>
    </record>

    <record id="dingtalk_message_template_form_view" model="ir.ui.view">
        <field name="name">消息模板</field>
        <field name="model">dingtalk.message.template</field>
        <field name="arch" type="xml">
            <form string="消息模板">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" required="1" placeholder="取一个响亮的消息名称吧..."/>
                        </h1>
                        <group>
                            <field name="model_id" required="1" options="{'no_create': True}"/>
                        </group>
                        <div name="options">
                            <div>
                                <field name="email"/>
                                <label for="email"/>
                            </div>
                            <div>
                                <field name="comment"/>
                                <label for="comment"/>
                            </div>
                            <div>
                                <field name="notification"/>
                                <label for="notification"/>
                            </div>
                        </div>
                    </div>
                    <notebook>
                        <page string="消息内容">
                            <group>
                                <field name="chat_id" placeholder="接受消息的钉钉群会话" options="{'no_create': True}"/>
                                <field name="subject" placeholder="请输入一个主题吧...支持Mako语法"/>
                            </group>
                            <group>
                                <field name="body" widget="html" options="{'style-inline': true}"/>
                            </group>
                        </page>
                        <page string="其他">
                            <group>
                                <group>
                                    <field name="create_uid" string="创建人" readonly='1'/>
                                </group>
                                <group>
                                    <field name="create_date" string="创建时间" readonly='1'/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dingtalk_message_template_action" model="ir.actions.act_window">
        <field name="name">消息模板</field>
        <field name="res_model">dingtalk.message.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="消息模板"
              id="dingtalk_message_template_menu"
              parent="ali_dingtalk.message_menu"
              sequence="1"
              action="dingtalk_message_template_action"
    />

</odoo>