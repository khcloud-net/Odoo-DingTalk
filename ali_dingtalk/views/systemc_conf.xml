<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ali_dingtalk_system_conf_tree_view" model="ir.ui.view">
        <field name="name">系统参数列表</field>
        <field name="model">ali.dingtalk.system.conf</field>
        <field name="arch" type="xml">
            <tree default_order="id desc" editable="top" create="true">
                <field name="name"/>
                <field name="key"/>
                <field name="value"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ali_dingtalk_system_conf_action">
        <field name="name">系统参数列表</field>
        <field name="res_model">ali.dingtalk.system.conf</field>
        <field name="view_mode">tree</field>
    </record>

    <record model="ir.ui.view" id="ali_dingtalk_system_conf_search">
        <field name="model">ali.dingtalk.system.conf</field>
        <field name="arch" type="xml">
            <search string="系统参数列表">
                <field name="name"/>
                <field name="key"/>
                <field name="value"/>
                <field name="state"/>
            </search>
        </field>
    </record>

    <menuitem id="ali_dingtalk_system_conf_menu" name="系统参数列表"
              parent="ali_dingtalk.configure_menu"
              sequence="2"
              action="ali_dingtalk_system_conf_action"
              groups="ali_dingtalk.group_ali_dingtalk_manager"
    />

</odoo>