<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="ali_dingtalk.main_group">
        <field name="name">钉钉管理</field>
        <field name="visible" eval="0"/>
    </record>

    <record id="group_ali_dingtalk_user" model="res.groups">
        <field name="name">用户</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="ali_dingtalk.main_group"/>
    </record>

    <record id="group_ali_dingtalk_manager" model="res.groups">
        <field name="name">管理员</field>
        <field name="category_id" ref="ali_dingtalk.main_group"/>
        <field name="implied_ids" eval="[(4, ref('ali_dingtalk.group_ali_dingtalk_user'))]"/>
    </record>

    <!-- 默认用户权限 -->
    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4, ref('group_ali_dingtalk_user'))]"/>
    </record>

</odoo>
