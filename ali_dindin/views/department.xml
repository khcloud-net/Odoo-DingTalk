<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="ali_dindin.view_department_form_inherit" model="ir.ui.view">
        <field name="name">hr.department.form</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <button name="toggle_active" position="before">
                <field name="dingding_type" invisible="1"/>
                <button name="create_ding_department" string="上传至钉钉" type="object" class="oe_stat_button" icon="fa-hand-scissors-o" attrs="{'invisible':[('dingding_type','=', 'yes')]}" groups="ali_dindin.dd_top_group">
                </button>
                <button name="update_ding_department" string="更新至钉钉" type="object" class="oe_stat_button" icon="fa-hand-peace-o" groups="ali_dindin.dd_update_group">
                </button>
            </button>
        </field>
    </record>

</odoo>