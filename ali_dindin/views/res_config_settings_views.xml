<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.union_pay</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="52"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block dindin_settings_block" string="钉钉" data-string="钉钉" data-key="ali_dindin" groups="ali_dindin.dd_setting_group">
                    <h2>钉钉API应用信息</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="din_agentid" placeholder="请输入AgentId！"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="din_agentid"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="din_corpid" placeholder="请输入钉钉CorpId！"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="din_corpid"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="din_appkey" placeholder="请输入AppKey！"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="din_appkey"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="din_appsecret" placeholder="请输入AppSecret！"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="din_appsecret"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>REDIS服务器配置</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="dingtalk_redis_ip" placeholder="请输入Redis服务器IP"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="dingtalk_redis_ip"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="dingtalk_redis_port" placeholder="请输入Redis服务器端口"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="dingtalk_redis_port"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="dingtalk_redis_db" placeholder="请输入Redis服务器数据库"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="dingtalk_redis_db"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>钉钉-模块安装</h2>
                    <div class="row mt16 o_settings_container">

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dindin_dashboard"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dindin_dashboard"/>
                                <div class="text-muted">
                                    钉钉办公-仪表盘（基础模块，推荐安装）
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dindin_message"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dindin_message"/>
                                <div class="text-muted">
                                    钉钉办公-消息管理（核心模块，推荐安装）
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dindin_login"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dindin_login"/>
                                <div class="text-muted">
                                    钉钉办公-扫码与免登（核心模块，推荐安装）
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dindin_message_template"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dindin_message_template"/>
                                <div class="text-muted">
                                    钉钉办公-消息模板管理
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dindin_callback"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dindin_callback"/>
                                <div class="text-muted">
                                    钉钉办公-回调管理（核心模块，推荐安装）
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dindin_attendance"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dindin_attendance"/>
                                <div class="text-muted">
                                    钉钉办公-考勤排班管理
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dindin_calendar"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dindin_calendar"/>
                                <div class="text-muted">
                                    钉钉办公-日程管理
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dingding_hrm"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dingding_hrm"/>
                                <div class="text-muted">
                                    钉钉办公-智能人事
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dindin_approval"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dindin_approval"/>
                                <div class="text-muted">
                                    钉钉办公-审批管理
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dindin_report"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dindin_report"/>
                                <div class="text-muted">
                                    钉钉办公-日志管理
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dindin_workrecord"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dindin_workrecord"/>
                                <div class="text-muted">
                                    钉钉办公-待办事项
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dindin_usersign"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dindin_usersign"/>
                                <div class="text-muted">
                                    钉钉办公-签到管理
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_dingding_health"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_dingding_health"/>
                                <div class="text-muted">
                                    钉钉办公-运动与健康
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>钉钉-同步操作</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="din_delete_extcontact"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="din_delete_extcontact"/>
                                <div class="text-muted">
                                    删除联系人时同步上传至钉钉
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="din_delete_employee"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="din_delete_employee"/>
                                <div class="text-muted">
                                    删除员工时自动同步至钉钉
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="din_delete_department"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="din_delete_department"/>
                                <div class="text-muted">
                                    删除部门时自动同步至钉钉
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="din_not_get_hidden_department"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="din_not_get_hidden_department"/>
                                <div class="text-muted">
                                    不同步钉钉通讯录中隐藏的部门
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>钉钉-扫码登录参数设置</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="din_login_appid" placeholder="请输入钉钉登录appId！"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="din_login_appid"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="din_login_appsecret" placeholder="请输入钉钉登录appSecret！"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="din_login_appsecret"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="dingding_settings_configuration_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'ali_dindin'}</field>
    </record>

    <menuitem id="dingding_settings_menu" name="基础设置" parent="ali_dindin.configure_menu" sequence="1" action="dingding_settings_configuration_action" groups="ali_dindin.dd_setting_group" />

</odoo>