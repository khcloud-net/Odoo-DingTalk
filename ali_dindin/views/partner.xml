<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--联系人标签from-->
    <record id="ali_dindin.view_partner_category_form_inherit" model="ir.ui.view">
        <field name="name">Contact Tags</field>
        <field name="model">res.partner.category</field>
        <field name="inherit_id" ref="base.view_partner_category_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="before">
                <field name="din_category_type" string="标签分类名"/>
            </xpath>
        </field>
    </record>

    <!--联系人标签tree-->
    <record id="ali_dindin.view_partner_category_tree_inherit" model="ir.ui.view">
        <field name="name">Contact Tags</field>
        <field name="model">res.partner.category</field>
        <field name="inherit_id" ref="base.view_partner_category_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="din_category_type" string="标签分类名"/>
            </xpath>
        </field>
    </record>

    <!--联系人-->
    <record id="ali_dindin.partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <newline/>
                <field name="din_company_name"/>
                <field name="din_employee_id"/>
                <field name="din_share_department_ids" widget="many2many_tags"/>
                <field name="din_share_employee_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="create_ding_partner" type="object" string="上传钉钉联系人" class="oe_highlight" confirm="确认要将此联系人上传至钉钉吗？若不是新创建的联系人则无法上传!" groups="ali_dindin.dd_top_group"/>
                    <button name="update_ding_partner" type="object" string="修改钉钉联系人" class="oe_highlight" confirm="系统将新的信息上传至钉钉,确认?" groups="ali_dindin.dd_update_group"/>
                </header>
            </xpath>
        </field>
    </record>

    <record id='get_partner_from_dingding_action' model='ir.actions.server'>
        <field name='name'>从钉钉更新</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="model_res_partner"/>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.get_dingding_partner()
        </field>
    </record>

</odoo>