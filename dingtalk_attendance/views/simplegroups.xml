<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dingtalk_simple_groups_tree_view" model="ir.ui.view">
        <field name="name">考勤组列表</field>
        <field name="model">dingtalk.simple.groups</field>
        <field name="arch" type="xml">
            <tree default_order="id desc" editable="top" create="false" edit="false">
                <field name="name"/>
                <field name="group_id"/>
                <field name="s_type"/>
                <field name="member_count"/>
                <field name="manager_list"/>
                <field name="dept_name_list"/>
                <field name="emp_ids"/>
            </tree>
        </field>
    </record>

    <record id="dingtalk_simple_groups_form_view" model="ir.ui.view">
        <field name="name">考勤组</field>
        <field name="model">dingtalk.simple.groups</field>
        <field name="arch" type="xml">
            <form string="工作消息">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="group_id"/>
                            <field name="s_type"/>
                        </group>
                        <group>
                            <field name="member_count"/>
                            <field name="manager_list" widget="many2many_tags"/>
                            <field name="dept_name_list" widget="many2many_tags"/>
                        </group>
                        <field name="emp_ids">
                            <tree editable="top" create="false" edit="false">
                                <field name="name"/>
                                <field name="department_id"/>
                                <field name="mobile_phone"/>
                                <field name="job_title"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="dingtalk_simple_groups_action">
        <field name="name">考勤组</field>
        <field name="res_model">dingtalk.simple.groups</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_s_type': True}</field>
    </record>

    <record model="ir.ui.view" id="dingtalk_simple_groups_search">
        <field name="model">dingtalk.simple.groups</field>
        <field name="arch" type="xml">
            <search string="考勤组">
                <field name="name"/>
                <field name="group_id"/>
                <field name="s_type"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_s_type" string="考勤类型" domain="[]"
                            context="{'group_by':'s_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <menuitem name="考勤"
              id="simple_groups_main_menu"
              parent="ali_dingtalk.main_menu"
              sequence="16"
              groups="ali_dingtalk.group_ali_dingtalk_user"
    />

    <menuitem id="dingtalk_simple_groups_menu1" name="考勤组"
              parent="simple_groups_main_menu"
              sequence="1"
              action="dingtalk_simple_groups_action"
    />

    <menuitem id="dingtalk_simple_groups_menu2" name="考勤组"
              parent="hr_attendance.menu_hr_attendance_manage_attendances"
              sequence="1"
              action="dingtalk_simple_groups_action"
    />  


    <record id="dingtalk_attendance.hr_employee_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_phone']" position="after">
                <field name="din_group_id"/>
            </xpath>
        </field>
    </record>

</odoo>