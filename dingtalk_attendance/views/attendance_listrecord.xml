<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dingtalk_attendance_listrecord_tree_view" model="ir.ui.view">
        <field name="name">打卡详情</field>
        <field name="model">dingtalk.attendance.list.record</field>
        <field name="arch" type="xml">
            <tree default_order="workDate desc" editable="top" create="false" edit="false">
                <field name="group_id"/>
                <field name="emp_id"/>
                <field name="recordId"/>
                <field name="workDate"/>
                <field name="checkType"/>
                <field name="locationResult"/>
                <field name="baseCheckTime"/>
                <field name="userCheckTime"/>
                <field name="sourceType"/>
                <field name="planId"/>
                <field name="recordMsg"/>
                <field name="outsideRemark"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="dingtalk_attendance_listrecord_action">
        <field name="name">打卡详情</field>
        <field name="res_model">dingtalk.attendance.list.record</field>
        <field name="view_mode">tree</field>
    </record>

    <record model="ir.ui.view" id="dingtalk_attendance_listrecord_search">
        <field name="model">dingtalk.attendance.list.record</field>
        <field name="arch" type="xml">
            <search string="打卡结果">
                <field name="group_id"/>
                <field name="emp_id"/>
                <field name="recordId"/>
                <field name="workDate"/>
                <field name="checkType"/>
                <field name="locationResult"/>
                <field name="baseCheckTime"/>
                <field name="userCheckTime"/>
                <field name="sourceType"/>
                <field name="planId"/>
                <field name="recordMsg"/>
                <field name="outsideRemark"/>
                <field name="company_id"/>
            </search>
        </field>
    </record>

    <menuitem id="dingtalk_attendance_listrecord_menu" name="打卡详情"
              parent="simple_groups_main_menu"
              sequence="3"
              action="dingtalk_attendance_listrecord_action"/>
</odoo>