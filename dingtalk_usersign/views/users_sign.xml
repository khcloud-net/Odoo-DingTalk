<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dingtalk_users_signs_tree_view" model="ir.ui.view">
        <field name="name">用户签到记录</field>
        <field name="model">dingtalk.users.signs</field>
        <field name="arch" type="xml">
            <tree default_order="id desc">
                <field name="company_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="line_ids"/>
            </tree>
        </field>
    </record>

    <record id="dingtalk_users_signs_form_view" model="ir.ui.view">
        <field name="name">用户签到记录</field>
        <field name="model">dingtalk.users.signs</field>
        <field name="arch" type="xml">
            <form string="用户签到记录">
                <header>
                    <button name="find_users_sign" type="object" string="开始查询" class="oe_highlight"/>
                </header>
                <group>
                    <group>
                        <field name="emp_ids" placeholder="请选择员工..." widget="many2many_tags"/>
                        <field name="company_id" placeholder="公司"/>
                    </group>
                    <group>
                        <field name="start_time"/>
                        <field name="end_time"/>
                    </group>
                </group>
                <field name="line_ids">
                    <tree editable="top" create="false" default_order="emp_id desc">
                        <field name="emp_id"/>
                        <field name="checkin_time"/>
                        <field name="visit_user"/>
                        <field name="place"/>
                        <field name="detail_place"/>
                        <field name="latitude"/>
                        <field name="longitude"/>
                        <field name="remark"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record id="dingtalk_users_signs_action" model="ir.actions.act_window">
        <field name="name">用户签到记录</field>
        <field name="res_model">dingtalk.users.signs</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="用户签到记录"
              id="dingtalk_users_signs_menu"
              parent="dingtalk_usersign.dingtalk_sign_menu"
              sequence="2"
              action="dingtalk_users_signs_action"
    />

</odoo>
