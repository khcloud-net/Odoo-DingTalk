<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="attendance_signs_list_tree_view" model="ir.ui.view">
        <field name="name">签到记录</field>
        <field name="model">attendance.signs.list</field>
        <field name="arch" type="xml">
            <tree editable="top" create="0" edit="0" default_order="checkin_time desc">
                <field name="emp_id"/>
                <field name="checkin_time"/>
                <field name="visit_user"/>
                <field name="place"/>
                <field name="detail_place"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="remark"/>
            </tree>
        </field>
    </record>

    <record id="attendance_signs_list_action" model="ir.actions.act_window">
        <field name="name">签到记录</field>
        <field name="res_model">attendance.signs.list</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem name="签到记录" id="attendance_signs_list_menu" parent="sign_menu" sequence="1" action="attendance_signs_list_action"/>

</odoo>
