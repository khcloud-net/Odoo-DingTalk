<odoo>
    <record id="hr_attendance_groups_tree_view" model="ir.ui.view">
        <field name="name">考勤组列表</field>
        <field name="model">hr.attendance.group</field>
        <field name="arch" type="xml">
            <tree default_order="id desc">
                <field name="group_name"/>
                <field name="attendance_type"/>
                <field name="member_count"/>
                <field name="manager_list"/>
                <field name="dept_name_list"/>
                <field name="emp_ids"/>
            </tree>
        </field>
    </record>

    <record id="hr_attendance_group_form_view" model="ir.ui.view">
        <field name="name">考勤组</field>
        <field name="model">hr.attendance.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="group_name"/>
                            <field name="attendance_type"/>
                            <field name="manager_list" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="member_count"/>
                            <field name="no_attendance_emp_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="考勤部门">
                            <field name="dept_name_list"/>
                        </page>
                        <page string="考勤成员">
                            <field name="emp_ids">
                                <tree editable="top">
                                    <field name="emp_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="周考勤班次">
                            <field name="class_list_ids">
                                <tree editable="top">
                                    <field name="week_name"/>
                                    <field name="class_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hr_attendance_group_action">
        <field name="name">考勤组</field>
        <field name="res_model">hr.attendance.group</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="context">{'search_default_group_by_attendance_type': True}</field> -->
    </record>

    <record model="ir.ui.view" id="hr_attendance_group_search">
        <field name="model">hr.attendance.group</field>
        <field name="arch" type="xml">
            <search string="考勤组">
                <field name="group_name"/>
                <field name="attendance_type"/>
                <!-- <group expand="0" string="Group By">
                    <filter name="group_by_attendance_type" string="考勤类型" domain="[]"
                            context="{'group_by':'attendance_type'}"/>
                </group> -->
            </search>
        </field>
    </record>

    <menuitem id="hr_attendance_group_menu" name="考勤组" parent="attendance_count_setting_menu" sequence="1"
              action="hr_attendance_group_action"/>

</odoo>