<odoo>

    <record id="hr_attendance_info_tree_view" model="ir.ui.view">
        <field name="name">员工考勤日报</field>
        <field name="model">hr.attendance.info</field>
        <field name="arch" type="xml">
            <tree default_order="check_time desc">
                <field name="emp_id"/>
                <field name="attendance_group_id"/>
                <field name="attendance_plan_id"/>
                <field name="work_date"/>
                <field name="check_type"/>
                <field name="locationResult"/>
                <field name="baseCheckTime"/>
                <field name="check_time"/>
                <field name="timeResult"/>
                <field name="sourceType"/>
                <field name="procInstId"/>
                <field name="procInst_title"/>
            </tree>
        </field>
    </record>

    <record id="hr_attendance_info_form_view" model="ir.ui.view">
        <field name="name">员工考勤日报</field>
        <field name="model">hr.attendance.info</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="emp_id"/>
                        <field name="attendance_group_id"/>
                        <field name="work_date"/>
                    </group>
                    <notebook>
                        <page string="打卡结果">
                            <group>
                                <group>
                                    <!-- <field name="record_id"/> -->
                                    <field name="check_type"/>
                                    <field name="locationResult"/>
                                    <field name="approveId"/>
                                    <field name="procInstId"/>
                                </group>
                                <group>
                                    <field name="attendance_plan_id"/>
                                    <field name="baseCheckTime"/>
                                    <field name="check_time"/>
                                    <field name="timeResult"/>
                                    <field name="sourceType"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_attendance_info_kanban">
        <field name="name">员工打卡结果看板</field>
        <field name="model">hr.attendance.info</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="true">
                <field name="emp_id"/>
                <field name="check_time"/>
                <field name="attendance_group_id"/>
                <field name="check_type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <img t-att-src="kanban_image('hr.employee', 'image_small', record.emp_id.raw_value)"
                                     t-att-title="record.emp_id.value" t-att-alt="record.emp_id.value" width="24"
                                     height="24" class="oe_kanban_avatar mr4"/>
                                <span class="o_kanban_record_title">
                                    <strong>
                                        <field name="emp_id"/>
                                    </strong>
                                </span>
                                <strong>
                                    <field name="timeResult" widget="label_selection"
                                           options="{'classes': {'NotSigned': 'default', 'Normal': 'success', 'Early': 'warning', 'Late': 'warning', 'SeriousLate': 'warning', 'Absenteeism': 'warning'}}"/>
                                </strong>
                            </div>
                            <hr class="mt4 mb8"/>
                            <div class="o_kanban_record_subtitle">
                                <i class="fa fa-calendar" aria-label="Period" role="img" title="Period"/>
                                <field name="check_type"/>
                                -
                                <field name="check_time"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_attendance_info_pivot">
        <field name="name">员工打卡结果列表视图</field>
        <field name="model">hr.attendance.info</field>
        <field name="arch" type="xml">
            <pivot string="考勤透视图">
                <field name="emp_id" type="col"/>
                <field name="check_type" type="row"/>
                <field name="check_time" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="hr_attendance_info_graph" model="ir.ui.view">
        <field name="name">attendance.attendance.graph</field>
        <field name="model">hr.attendance.info</field>
        <field name="arch" type="xml">
            <graph string="员工打卡结果列表报表" stacked="True">
                <field name="emp_id" type="row"/>
                <field name="timeResult" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="hr_attendance_info_calendar" model="ir.ui.view">
        <field name="name">attendance.attendance.calendar</field>
        <field name="model">hr.attendance.info</field>
        <field name="arch" type="xml">
            <calendar string="考勤" date_start="work_date" color="check_type">
                <field name="emp_id"/>
                <field name="timeResult"/>
            </calendar>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hr_attendance_info_action">
        <field name="name">员工打卡结果</field>
        <field name="res_model">hr.attendance.info</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
        <field name="context">{'search_default_groupby_timeResult': True}</field>
    </record>

    <record model="ir.ui.view" id="hr_attendance_info_search">
        <field name="model">hr.attendance.info</field>
        <field name="arch" type="xml">
            <search string="员工打卡结果">
                <field name="emp_id"/>
                <field name="attendance_group_id"/>
                <field name="work_date"/>
                <field name="check_type"/>
                <field name="locationResult"/>
                <field name="baseCheckTime"/>
                <field name="check_time"/>
                <field name="timeResult"/>
                <field name="sourceType"/>
                <separator/>
                <filter name="groupby_timeResult" string="考勤结果" context="{'group_by': 'timeResult'}"/>
                <filter name="groupby_locationResult" string="考勤位置" context="{'group_by': 'locationResult'}"/>
                <filter name="groupby_sourceType" string="数据来源" context="{'group_by': 'sourceType'}"/>
                <separator/>
                <filter name="groupby_emp_id" string="员工" context="{'group_by': 'emp_id'}"/>
                <filter name="groupby_check_type" string="考勤类型" context="{'group_by': 'check_type'}"/>
                <filter string="我的考勤" name="myattendances" domain="[('emp_id.user_id.id', '=', uid)]"/>
                <separator/>
                <filter name="check_in_filter" string="签到日期" date="check_time"/>
                <separator/>
            </search>
        </field>
    </record>

    <menuitem id="hr_attendance_info_menu" name="员工考勤日报" parent="attendance_count_record_menu" sequence="2"
              action="hr_attendance_info_action"/>


    <record id="og_attendance_count.view_employee_form_inherit_hr_attendance" model="ir.ui.view">
        <field name="name">hr.employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="priority">11</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='toggle_active']" position="before">
                <button type="object" name="og_attendance_count_action_employee" class="oe_stat_button" string="其他出勤"
                        icon="fa-calendar-check-o">
                </button>
            </xpath>
        </field>
    </record>

    <record id="hr_attendance_tran_form_view" model="ir.ui.view">
        <field name="name">hr.attendance.info.tran.form</field>
        <field name="model">hr.attendance.info.tran</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="stop_date"/>
                    </group>
                </group>
                <group>
                    <field name="is_all_emp"/>
                    <field name="emp_ids" widget="many2many_tags" placeholder="员工..."/>
                </group>
                <footer>
                    <button string="计算考勤结果" name="get_attendance_info_list" type="object" class="oe_highlight"/>
                    <button string="取消" class="btn btn-default" special="cancel"/>
                    <button string="清空记录" name="clear_attendance_info" type="object" class="btn-danger oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_attendance_info_tran_action" model="ir.actions.act_window">
        <field name="name">hr.attendance.info.tran.action</field>
        <field name="res_model">hr.attendance.info.tran</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>