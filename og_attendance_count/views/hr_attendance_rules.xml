<odoo>

    <record id="hr_attendance_rules_tree_view" model="ir.ui.view">
        <field name="name">考勤规则</field>
        <field name="model">hr.attendance.rules</field>
        <field name="arch" type="xml">
            <tree default_order="id">
                <field name="name"/>
                <field name="attendance_information"/>
                <field name="work_time"/>
                <field name="simple_ids"/>
                <field name="work_overtime_deduction"/>
            </tree>
        </field>
    </record>

    <record id="hr_attendance_rules_form_view" model="ir.ui.view">
        <field name="name">考勤规则</field>
        <field name="model">hr.attendance.rules</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title" name="title">
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" placeholder="规则名称" required="1"/>
                    </h1>
                </div>
                <group col="2">
                    <group>
                        <field name="attendance_information" required="1"/>
                        <field name="simple_ids" required="1" widget="many2many_tags"/>
                        <field name="work_time" required="1"/>
                    </group>
                </group>
                <group string="考勤规则">
                    <group string="请假规则">
                        <field name="leave_minimum_unit" required="1"/>
                        <field name="leave_time_accounting" required="1"/>
                        <field name="leave_oa_madel" required="1"/>
                    </group>
                    <group string="加班规则">
                        <field name="is_allow_overtime" required="1"/>
                        <field name="work_overtime_deduction" attrs="{'invisible':[('is_allow_overtime', '=', 0)]}"/>
                        <field name="work_overtime_minimum_time" attrs="{'invisible':[('is_allow_overtime', '=', 0)]}"/>
                        <field name="work_overtime_oa_madel" attrs="{'invisible':[('work_overtime_deduction', '=', '02')]}"/>
                    </group>
                    <group string="迟到规则">
                        <field name="onduty1_late_attendance_deduction" required="1"/>
                        <field name="onduty1_late_attendance_time" attrs="{'invisible':[('onduty1_late_attendance_deduction', '!=', '00')]}"/>
                        <field name="onduty2_late_attendance_deduction" required="1"/>
                        <field name="onduty2_late_attendance_time" attrs="{'invisible':[('onduty2_late_attendance_deduction', '!=', '00')]}"/>
                        <field name="onduty3_late_attendance_deduction" required="1"/>
                        <field name="onduty3_late_attendance_time" attrs="{'invisible':[('onduty3_late_attendance_deduction', '!=', '00')]}"/>
                    </group>
                    <group string="早退规则">
                        <field name="offduty1_early_deduction" required="1"/>
                        <field name="offduty1_early_time" attrs="{'invisible':[('offduty1_early_deduction', '!=', '00')]}"/>
                        <field name="offduty2_early_deduction" required="1"/>
                        <field name="offduty2_early_time" attrs="{'invisible':[('offduty2_early_deduction', '!=', '00')]}"/>
                        <field name="offduty3_early_deduction" required="1"/>
                        <field name="offduty3_early_time" attrs="{'invisible':[('offduty3_early_deduction', '!=', '00')]}"/>
                    </group>
                    <group string="漏打卡规则-上午">
                        <field name="onduty1_notsigned_rule" required="1"/>
                        <field name="onduty1_notsigned_money" attrs="{'invisible':[('onduty1_notsigned_rule', '!=', '00')]}"/>
                        <field name="offduty1_notsigned_rule" required="1"/>
                        <field name="offduty1_notsigned_money" attrs="{'invisible':[('offduty1_notsigned_rule', '!=', '00')]}"/>
                    </group>
                    <group string="漏打卡规则-下午">
                        <field name="onduty2_notsigned_rule" required="1"/>
                        <field name="onduty2_notsigned_money" attrs="{'invisible':[('onduty2_notsigned_rule', '!=', '00')]}"/>
                        <field name="offduty2_notsigned_rule" required="1"/>
                        <field name="offduty2_notsigned_money" attrs="{'invisible':[('offduty2_notsigned_rule', '!=', '00')]}"/>
                    </group>
                    <group string="漏打卡规则-晚上">
                        <field name="onduty3_notsigned_rule" required="1"/>
                        <field name="onduty3_notsigned_money" attrs="{'invisible':[('onduty3_notsigned_rule', '!=', '00')]}"/>
                        <field name="offduty3_notsigned_rule" required="1"/>
                        <field name="offduty3_notsigned_money" attrs="{'invisible':[('offduty3_notsigned_rule', '!=', '00')]}"/>
                    </group>
                </group>
                <group string="备注">
                    <field name="notes" nolabel="1"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hr_attendance_rules_action">
        <field name="name">考勤规则</field>
        <field name="res_model">hr.attendance.rules</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_attendance_rules_menu" name="考勤规则" parent="attendance_count_setting_menu" sequence="3" action="hr_attendance_rules_action"/>

</odoo>