<odoo>
    <record id="hr_attendance_class_tree_view" model="ir.ui.view">
        <field name="name">班次</field>
        <field name="model">hr.attendance.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="class_name"/>
                <field name="attendance_times"/>
            </tree>
        </field>
    </record>

    <record id="hr_attendance_class_form_view" model="ir.ui.view">
        <field name="name">班次</field>
        <field name="model">hr.attendance.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="class_name"/>
                            <field name="attendance_times"/>
                            <field name="rest_begin_time" widget="float_full_time" options="{'round_off': True}" attrs="{'invisible': [('attendance_times', '!=', '1')]}"/>
                            <field name="rest_end_time" widget="float_full_time" options="{'round_off': True}" attrs="{'invisible': [('attendance_times', '!=', '1')]}"/>
                        </group>
                        <group string = "人性化考勤设置">
                            <field name="permit_late_minutes"/>
                            <field name="serious_late_minutes"/>
                            <field name="absenteeism_late_minutes"/>
                            <field name="is_off_duty_free_check"/>
                            <field name="is_late_check_in"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="打卡时间段">
                            <field name="time_ids">
                                <tree editable="top">
                                    <field name="check_type"/>
                                    <field name="check_time" widget="float_full_time" options="{'round_off': True}"/>
                                    <field name="begin_min" widget="float_full_time" options="{'round_off': True}"/>
                                    <field name="end_min" widget="float_full_time" options="{'round_off': True}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hr_attendance_class_action">
        <field name="name">班次</field>
        <field name="res_model">hr.attendance.class</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="context">{'search_default_group_by_attendance_type': True}</field> -->
    </record>

    <!-- <record model="ir.ui.view" id="hr_attendance_group_search">
        <field name="model">hr.attendance.group</field>
        <field name="arch" type="xml">
            <search string="考勤组">
                <field name="group_name"/>
                <field name="attendance_type"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_attendance_type" string="考勤类型" domain="[]" context="{'group_by':'attendance_type'}"/>
                </group>
            </search>
        </field>
    </record> -->

    <menuitem id="hr_attendance_class_menu" name="班次" parent="attendance_count_setting_menu" sequence="2" action="hr_attendance_class_action"/>

</odoo>