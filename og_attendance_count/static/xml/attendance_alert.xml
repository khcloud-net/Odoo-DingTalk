            计算考勤结果
        </button>
    </t>
    <t t-extend="ListView.buttons" t-name="OdooHrManageListView.hr_attendance_info_buttons">
        <t t-jquery="button.o_list_button_add" t-operation="after">
            <t t-js="ctx">
                if (window.odoo._modules.indexOf("base_import") >= 0) {
                    r.push(context.engine.tools.call(context, 'ImportView.import_button', dict));
                };
            </t>
            <t t-call="OdooHrManageListView.hr_attendance_info_but"/>
        </t>
    </t>

    <t t-name="OdooHrManageListView.hr_attendance_total_but">
        <button type="button" class="btn btn-secondary compute_attendance_total_buttons_but_class" groups="og_attendance_count.manage_groups">
            汇总考勤结果
        </button>
    </t>
    <t t-extend="ListView.buttons" t-name="OdooHrManageListView.hr_attendance_total_buttons">
        <t t-jquery="button.o_list_button_add" t-operation="after">
            <t t-js="ctx">
                if (window.odoo._modules.indexOf("base_import") >= 0) {
                    r.push(context.engine.tools.call(context, 'ImportView.import_button', dict));
                };
            </t>
            <t t-call="OdooHrManageListView.hr_attendance_total_but"/>
        </t>
    </t>

</template>


