<template id="template" xml:space="preserve">

    <t t-name="OdooHrManageListView.hr_attendance_plan_but">
        <button type="button" class="btn btn-secondary compute_attendance_plan_buttons_but_class" groups="og_attendance_count.manage_groups">
            生成排班表
        </button>
    </t>
    <t t-extend="ListView.buttons" t-name="OdooHrManageListView.hr_attendance_plan_buttons">
        <t t-jquery="button.o_list_button_add" t-operation="after">
            <t t-js="ctx">
                if (window.odoo._modules.indexOf("base_import") >= 0) {
                    r.push(context.engine.tools.call(context, 'ImportView.import_button', dict));
                };
            </t>
            <t t-call="OdooHrManageListView.hr_attendance_plan_but"/>
        </t>
    </t>

    <t t-name="OdooHrManageListView.hr_attendance_info_but">
