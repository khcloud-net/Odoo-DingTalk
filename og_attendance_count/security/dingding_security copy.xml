<odoo>

    <record model="ir.module.category" id="main_groups">
        <field name="name">考勤计算</field>
        <field name="visible" eval="0"/>
    </record>

    <record id="user_groups" model="res.groups">
        <field name="name">用户</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="og_attendance_count.main_groups"/>
    </record>

    <record id="manage_groups" model="res.groups">
        <field name="name">管理员</field>
        <field name="implied_ids" eval="[(4, ref('og_attendance_count.user_groups'))]"/>
        <field name="category_id" ref="og_attendance_count.main_groups"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <!-- 考勤结果过滤规则 -->
   <record id="og_attendance_user_group_rule" model="ir.rule">
        <field name="name">员工打卡结果列表:用户记录规则</field>
        <field name="model_id" ref="model_hr_attendance_result"/>
        <field name="domain_force">[('emp_id.user_id', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('og_attendance_count.user_groups'))]"/>
    </record>

    <record id="og_attendance_admin_group_rule" model="ir.rule">
        <field name="name">员工打卡结果列表:管理员记录规则</field>
        <field name="model_id" ref="model_hr_attendance_result"/>
        <field name="groups" eval="[(4, ref('og_attendance_count.manage_groups'))]"/>
        <field name="domain_force">[]</field>
    </record>

    <!--  排班列表过滤规则  -->
     <record id="og_hr_attendance_plan_rule" model="ir.rule">
        <field name="name">考勤排班列表:仅自己记录规则</field>
        <field name="model_id" ref="model_hr_attendance_plan"/>
        <field name="domain_force">['|', ('user_id.user_id', 'in', [user.id]),('user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('og_attendance_count.user_groups'))]"/>
    </record>

    <record id="og_simple_groups_admin_rule" model="ir.rule">
        <field name="name">考勤排班列表:所有记录规则</field>
        <field name="model_id" ref="model_hr_attendance_plan"/>
        <field name="groups" eval="[(4, ref('og_attendance_count.manage_groups'))]"/>
        <field name="domain_force">[]</field>
    </record>

    <!--  请假列表过滤规则  -->
     <record id="og_hr_leaves_list_user_rule" model="ir.rule">
        <field name="name">考勤请假列表:仅自己记录规则</field>
        <field name="model_id" ref="model_hr_leaves_list"/>
        <field name="domain_force">['|', ('user_id.user_id', 'in', [user.id]),('user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('og_attendance_count.user_groups'))]"/>
    </record>

    <record id="og_hr_leaves_list_admin_rule" model="ir.rule">
        <field name="name">考勤请假列表:所有记录规则</field>
        <field name="model_id" ref="model_hr_leaves_list"/>
        <field name="groups" eval="[(4, ref('og_attendance_count.manage_groups'))]"/>
        <field name="domain_force">[]</field>
    </record>

        <!--  员工打卡详情过滤规则  -->
     <record id="og_hr_attendance_record_user_rule" model="ir.rule">
        <field name="name">员工打卡详情:仅自己记录规则</field>
        <field name="model_id" ref="model_hr_attendance_record"/>
        <field name="domain_force">['|', ('userId.user_id', 'in', [user.id]),('userId', '=', False)]</field>
        <field name="groups" eval="[(4, ref('og_attendance_count.user_groups'))]"/>
    </record>

    <record id="og_hr_attendance_record_admin_rule" model="ir.rule">
        <field name="name">员工打卡详情:所有记录规则</field>
        <field name="model_id" ref="model_hr_attendance_record"/>
        <field name="groups" eval="[(4, ref('og_attendance_count.manage_groups'))]"/>
        <field name="domain_force">[]</field>
    </record>

    <!--  员工签到记录列表过滤规则  -->
     <record id="attendance_signs_list_user_groups_rule" model="ir.rule">
        <field name="name">签到记录列表:仅自己记录规则</field>
        <field name="model_id" ref="model_attendance_signs_list"/>
        <field name="domain_force">['|', ('emp_id.user_id', 'in', [user.id]),('emp_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('og_attendance_count.user_groups'))]"/>
    </record>

    <record id="attendance_signs_list_manage_groups_rule" model="ir.rule">
        <field name="name">签到记录列表:所有记录规则</field>
        <field name="model_id" ref="model_attendance_signs_list"/>
        <field name="groups" eval="[(4, ref('og_attendance_count.manage_groups'))]"/>
        <field name="domain_force">[]</field>
    </record>


</odoo>
